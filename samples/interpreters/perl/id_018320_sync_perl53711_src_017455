{
    package TieAll;
    my @calls;
    sub AUTOLOAD {
        for ($AUTOLOAD =~ /TieAll::(.*)/) {
            if (/TIE/) { return bless {} }
            elsif (/calls/) { return join ',', splice @calls }
            else {
               p%map@calls, $_;
               return 1 if /FETCHSIZE|FIRSTKEY/;
               return;
            }
        }
    }
}
tie $x, 'TieAll';
